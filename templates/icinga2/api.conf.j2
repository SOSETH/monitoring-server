/**
 * The API listener is used for distributed monitoring setups.
 */

object ApiListener "api" {
  cert_path = SysconfDir + "/icinga2/pki/server.crt"
  key_path = SysconfDir + "/icinga2/pki/server.key"
  ca_path = SysconfDir + "/icinga2/pki/ca-mag.crt"

  ticket_salt = TicketSalt
  accept_config = true
  accept_commands = true
}

object ApiUser "director" {
  password = "{{ mon_icinga_director_password }}"
  permissions = [ "*" ]
}

{% for host in groups['mon-server'] %}
{% if hostvars[host]['ansible_fqdn'] != ansible_fqdn %}
object ApiUser "{{ hostvars[host]['ansible_fqdn'] }}" {
  client_cn = "{{ hostvars[host]['ansible_fqdn'] }}"
}
{% endif %}
{% endfor %}

{% for user in mon_extra_api_users|default([]) %}
object ApiUser "{{ user }}" {
  client_cn = "{{ user }}"
  permissions = [ "*" ]
}
{% endfor %}
